generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL") 
}

// ---- NOSSOS MODELOS DE DADOS ----

model Projeto {
  id              Int     @id @default(autoincrement())
  nome            String
  descricao       String
  linkRepositorio String? 
}

model Formacao {
  id          Int     @id @default(autoincrement())
  curso       String
  instituicao String
  periodo     String
}

model Competencia {
  id         Int     @id @default(autoincrement())
  habilidade String
  nivel      String  
}

model Certificado {
  id      Int     @id @default(autoincrement())
  titulo  String
  emissor String
  ano     String
}